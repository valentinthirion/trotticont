<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_race_tree" model="ir.ui.view">
            <field name="name">view_race_tree</field>
            <field name="model">trotticont.race</field>
            <field name="arch" type="xml">
                <tree string="Races">
                    <field name="name" />
                    <field name="description" />
                    <field name="date" />
                    <field name="place" />
                    <field name="state" />
                </tree>
            </field>
        </record>

        <record id="view_race_form" model="ir.ui.view">
            <field name="name">view_race_form</field>
            <field name="model">trotticont.race</field>
            <field name="arch" type="xml">
                <form string="Race">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved" statusbar_colors="{'submitted': 'blue','refused':'red'}" />
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="date" />
                            </group>
                            <group>
                                <field name="image" widget='image' class="oe_avatar" options='{"preview_image":"image_medium"}'/>
                            </group>
                        </group>
                        <group>
                            <field name="description" />
                        </group>
                        <group>
                            <field name="team_ids">
                                <field name="team_number" />
                                <field name="name" />
                                <field name="category_id" />
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</openerp>