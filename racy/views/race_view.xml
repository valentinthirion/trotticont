<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_race_tree" model="ir.ui.view">
            <field name="name">view_race_tree</field>
            <field name="model">racy.race</field>
            <field name="arch" type="xml">
                <tree string="Races">
                    <field name="name" />
                    <field name="description" />
                    <field name="date" />
                    <field name="place" />
                    <field name="state" />
                </tree>
            </field>
        </record>

        <record id="view_race_form" model="ir.ui.view">
            <field name="name">view_race_form</field>
            <field name="model">racy.race</field>
            <field name="arch" type="xml">
                <form string="Race">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved" statusbar_colors="{'submitted': 'blue','refused':'red'}" />
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="date" />
                            </group>
                            <group>
                                <field name="image" widget='image' class="oe_avatar" options='{"preview_image":"image_medium"}'/>
                            </group>
                        </group>
                        <group>
                            <field name="description" />
                        </group>
                        <group name="race_settings">
                            <field name="racing_mode" />
                            <field name="group_mode" />
                        </group>
                        <notebook>
                            <page name="routes" string="Routes">
                                <field name="route_ids">
                                    <tree editable="bottom">
                                        <field name="name" />
                                        <field name="length" />
                                        <field name="d_plus" />
                                        <field name="start_date" />
                                        <field name="end_date" />
                                    </tree>
                                </field>
                                <field name="route_count" />
                            </page>
                            <page name="teams" string="Teams">
                                <field name="team_ids">
                                    <tree>
                                        <field name="team_number" />
                                        <field name="name" />
                                        <field name="category_id" />
                                        <field name="group_id" />
                                    </tree>
                                </field>
                                <field name="team_count" />
                            </page>
                            <page name="categories" string="Categories">
                                <field name="category_ids">
                                    <tree>
                                        <field name="name" />
                                    </tree>
                                </field>
                            </page>
                            <page name="groups" string="Groups">
                                <field name="group_ids">
                                    <tree>
                                        <field name="name" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</openerp>